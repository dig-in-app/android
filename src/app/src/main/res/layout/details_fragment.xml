<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edge_border"
            android:paddingTop="20dp"
            android:paddingBottom="7dp"
            >

            <com.loopj.android.image.SmartImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:padding="10dp"
                android:src="@drawable/logo"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edge_dot_border" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/digin_brown"
                android:id="@+id/nameText"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:text="Sun King Brewery"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:background="@drawable/edge_dot_border" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/digin_brown"
                android:id="@+id/farmText"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:text="Farm"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/digin_brown"
                android:id="@+id/dishText"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:text="Dish"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/digin_brown"
                android:id="@+id/chefText"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:text="Chef"/>

            <View
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/footer_background" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>